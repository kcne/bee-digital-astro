            <Paragraph className="mt-8">
                {t("features.paragraph")}
            </Paragraph>
            <ul class="mt-8 space-y-4 text-heading-3 font-medium">
                <li class="border-gray-300 border rounded-md p-3 flex items-start">
                    <span class="font-bold rounded-full w-8 h-8 mr-3 text-primary inline-flex justify-center items-center pb-2">
